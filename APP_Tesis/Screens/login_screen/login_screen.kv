
<LoginScreen>:
    name: "login_screen"
    MDBoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "10dp"  # Espaciado entre los widgets
        canvas.before:
            Color:
                rgba: rgba('#0034C3')
            Triangle:
                points: [0, self.size[1], self.size[0], self.size[1], 0, self.size[1]-(.4*self.size[1])]
            Color:
                rgba: rgba('#0e1574c8')
            Triangle:
                points: [0, self.size[1], self.size[0],self.size[1], self.size[0], self.size[1]- (.4*self.size[1])]
        Widget:
            size_hint_y: .6
        MDIcon:
            icon: 'account-circle'
            font_size: '134sp'
            markup: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_y: .3
            theme_text_color: "Custom"
            text_color: [0, 52/255, 195/255, 1]  # Color azul personalizado
            canvas.before:
                Color:
                    rgba: [0, 52/255, 195/255, 1]  # Color azul para el fondo

        FlatInput:
            id: username_field
            hint_text: "Username"
            mode: "round"
            color_active: 1, 1, 1, 1  # Color del texto activo (blanco)
            color_normal: 1, 1, 1, 1  # Color del texto normal (blanco)
            size_hint_y: None
            height: "36dp"
            pos_hint: {"center_x": 0.5, "y": 0.2}

        FlatInput:
            id: password_field
            hint_text: "Password"
            mode: "round"
            password: True
            color_active: 1, 1, 1, 1  # Color del texto activo (blanco)
            color_normal: 1, 1, 1, 1  # Color del texto normal (blanco)
            size_hint_y: None
            height: "36dp"
            pos_hint: {"center_x": 0.5, "y": 0.3}

        FlatButton:
            text: "Login"
            size_hint: .4, .1
            pos_hint: {"center_x": 0.5, "y": 0.4}
            on_press: root.login()  # Llamar al método login cuando se presione el botón
            size_hint_y: None  # Hacer que el botón tenga un tamaño fijo
            height: "48dp"  # Altura fija del botón
            pos_hint: {"center_x": 0.5}  # Centrar el botón horizontalmente
            canvas.before: 
                Color: 
                    rgba: rgba('#0034c3')
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]
        MDLabel:
            size_hint_y: .3
        MDRectangleFlatButton:
            text: "Register"
            size_hint: .2, .1
            pos_hint: {"center_x": 0.5, "y": 0.3}
            on_press: root.register()  # Llamar al método login cuando se presione el botón
            size_hint_y: None  # Hacer que el botón tenga un tamaño fijo
            height: "48dp"  # Altura fija del botón
            pos_hint: {"center_x": 0.5}  # Centrar el botón horizontalmente
            color: rgba('#4f97ff')


<FlatButton@Button>
    background_normal: ''
    background_color: [1,1,1,0]

<FlatInput@TextInput>:
    background_active: '' 
    background_normal: ''
    background_color: [1,1,1,0]
    canvas.before:
        Color:
            rgba: rgba('#4f97ff')
        Rectangle:
            pos: self.pos
            size: [self.size[0], 1]
<MainWindow>:
    orientation: 'vertical' 
    canvas.before: 
        Color:
            rgba: [1,1,1,1]
        Rectangle:
            pos: self.pos
            size: self.size
    ScreenManager:
        id: scrn_mngr
        Screen:
            name: 'scrn_signin'
            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                Color:
                    rgba: rgba('#0e1574ff')
                Triangle:
                    points: [0, self.size[1], self.size[0], self.size[1], 0, self.size[1]-(.4*self.size[1])]
                    Color:
                        rgba: rgba('#0e1574c8')
                Triangle:
                    Label:
                        points: [0, self.size[1], self.size[0],self.size[1], self.size[0], self.size[1]- (.4*self.size[1])]
                        text: '%s'%icon('zmdi-account-add')
                        font_size: mtx.sp('34')
                        markup: True
                        color: rgba()